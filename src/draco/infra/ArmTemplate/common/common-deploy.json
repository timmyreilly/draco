{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.1",
  "parameters": {
  },
  "variables": {
    "prefix": "draco",
    "uniqueId": "[uniqueString(resourceGroup().id)]",
    "acrName": "[take(concat(variables('prefix'), variables('uniqueId'), 'acr'), 50)]",
    "akvName": "[take(concat(variables('prefix'), '-', variables('uniqueId'), '-akv'), 24)]",
    "apimName": "[concat(variables('prefix'), '-', variables('uniqueId'), '-apim')]",
    "apimVnetName": "[concat(variables('prefix'), '-', variables('uniqueId'), '-vnet')]",
    "acrSku": "Basic",
    "akvSku": "Standard",
    "resourceTags": {
      "platform": "[variables('prefix')]"
    }
  },
  "resources": [
    {
      "apiVersion": "2019-11-01",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "name": "[variables('apimVNetName')]",
      "tags": "[variables('resourceTags')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.11.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "apim-subnet",
            "properties": {
              "addressPrefix": "10.11.0.0/24",
              "delegations": [],
              "privateEndpointNetworkPolicies": "Enabled",
              "privateLinkServiceNetworkPolicies": "Enabled"
            }
          }
        ],
        "virtualNetworkPeerings": [],
        "enableDdosProtection": false,
        "enableVmProtection": false
      }
    },

    {
      "apiVersion": "2019-12-01-preview",
      "type": "Microsoft.ApiManagement/service",
      "location": "[resourceGroup().location]",
      "name": "[variables('apimName')]",
      "tags": "[variables('resourceTags')]",
      "sku": {
        "name": "Developer",
        "capacity": 1
      },
      "properties": {
        "publisherEmail": "johndoe@contoso.com",
        "publisherName": "John Doe"
      }
    }
  ]
}
